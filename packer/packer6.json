{
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/vagrant.sh",
        "scripts/package.sh",
        "scripts/rpmbuild.sh",
        "scripts/virtualbox.sh",
        "scripts/cleanup.sh"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": 9,
      "output": "builds/centos6.5-x86_64-rpmbuild.box"
    }
  ],
  "builders": [
    {
      "vm_name": "centos6.5-x86_64-rpmbuild",
      "guest_os_type": "RedHat_64",
      "iso_checksum_type": "md5",
      "iso_checksum": "83221db52687c7b857e65bfe60787838",
      "iso_url": "http://ftp.riken.jp/Linux/centos/6.5/isos/x86_64/CentOS-6.5-x86_64-bin-DVD1.iso",
      "type": "virtualbox-iso",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "50000s",
      "disk_size": 50000,
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "1024" ],
        [ "modifyvm", "{{.Name}}", "--cpus",   "1"    ]
      ],
      "http_directory": "http",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks6.cfg<enter>"
      ],
      "boot_wait": "10s",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -h -p"
    }
  ]
}
